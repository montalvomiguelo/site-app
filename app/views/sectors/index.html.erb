<p id="notice"><%= notice %></p>


<div class="layout">
  <%= render 'shared/nav' %>
  <div class="main">
    <%= link_to 'Atrás', companies_path, class: "back-button" %>
    <h1 class="main-headline inline-block">Sectores</h1>
    <p>
      <%= link_to 'Nuevo Sector', new_sector_path, class: "btn" %>
    </p>
    

    <table class="site-table">
      <thead>
        <tr>
          <th>Imagen</th>
          <th>Nombre</th>
          <th>Descripción</th>
        </tr>
      </thead>

      <tbody>
        <% @sectors.each do |sector| %>
          <tr>
            <td><%= link_to (image_tag (sector.image.url(:thumb)), class: 'work'), action_activate_deactivate_path(sector_id:sector), method: :post %></td>
            <td><%= link_to sector.name, sector %></td>
            <td><%= sector.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    
  </div>
</div>
<%= render "shared/footer" %>